{
  "name": "食刻轻卡",
  "appid": "__UNI__XXXXXX",
  "description": "智能饮食记录与健康管理应用",
  "versionName": "1.0.0",
  "versionCode": "100",
  "transformPx": false,
  "mp-weixin": {
    "appid": "",
    "usingComponents": true,
    "requiredBackgroundModes": ["audio", "location"],
    "permission": {
      "scope.userLocation": {
        "desc": "你的位置信息将用于计算运动消耗"
      },
      "scope.camera": {
        "desc": "用于拍照识别食物"
      }
    },
    "networkTimeout": {
      "request": 30000,
      "connectSocket": 30000,
      "uploadFile": 30000,
      "downloadFile": 30000
    },
    "requiredPrivateInfos": ["getLocation", "chooseImage", "scanCode"]
  },
  "h5": {
    "title": "食刻轻卡",
    "fallback": {
      "url": "https://example.com"
    },
    "devServer": {
      "https": false
    }
  },
  "app-plus": {
    "usingComponents": true,
    "nvueStyleCompiler": "uni-app",
    "compilerVersion": 3,
    "splashscreen": {
      "alwaysShowBeforeRender": true,
      "waiting": true,
      "autoclose": true,
      "delay": 0
    },
    "privacy": {
      "prompt": "template",
      "template": {
        "title": "《食刻轻卡隐私保护指引》",
        "content": "感谢您使用食刻轻卡！我们非常重视您的隐私保护，仅收集必要的数据用于应用功能实现。",
        "actions": [
          {
            "name": "同意",
            "action": "agree"
          },
          {
            "name": "拒绝",
            "action": "disagree"
          }
        ]
      }
    }
  },
  "mp-alipay": {
    "usingComponents": true
  },
  "mp-baidu": {
    "usingComponents": true
  },
  "mp-toutiao": {
    "usingComponents": true
  }
}